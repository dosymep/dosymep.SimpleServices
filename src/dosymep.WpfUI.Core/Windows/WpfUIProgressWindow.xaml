<Window
    x:Class="dosymep.WpfUI.Core.Windows.WpfUIProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:dosymep.WpfUI.Core.Windows"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:dosymep.Wpf.Core.Behaviors;assembly=dosymep.Wpf.Core"

    WindowStyle="None"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"

    mc:Ignorable="d"
    Title="{DynamicResource ProgressBar.Title}"
    Height="50" Width="400"

    Margin="0"
    Padding="0"

    x:Name="_this" x:ClassModifier="internal">

    <b:Interaction.Behaviors>
        <behaviors:WpfThemeBehavior />
        <behaviors:WpfLocalizationBehavior />
    </b:Interaction.Behaviors>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <ProgressBar
            Grid.Column="0"
            Grid.ColumnSpan="2"
            x:Name="_progressEdit"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch" />

        <ui:TextBlock
            Grid.Column="0"
            Grid.ColumnSpan="2"
            x:Name="_textEdit"
            Text="{me:LocalizationSource ProgressBar.PleaseWait}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center" />

        <ui:Button
            Grid.Column="1"
            x:Name="_cancelButton"
            Content="{me:LocalizationSource ProgressBar.CanceButton}"
            Height="25"
            Width="80"
            Margin="10 0 10 0"
            Visibility="Hidden"
            HorizontalAlignment="Right"
            IsCancel="True"
            Click="CancelButton_OnClick" />
    </Grid>
</Window>