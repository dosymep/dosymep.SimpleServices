<local:WpfUIPlatformPage
    x:Class="WpfUIDemoApp.Views.Pages.ThreeViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfUIDemoApp.Views.Pages"
    mc:Ignorable="d"
    Title="ThreeViewPage" Height="450" Width="800">
    <Grid>
        <TreeView>
            <TreeViewItem Header="Базы данных" IsExpanded="True">
                <TreeViewItem Header="MS SQL Server" />
                <TreeViewItem Header="MySQL" />
                <TreeViewItem Header="MongoDB" />
                <TreeViewItem Header="Postgres" />
            </TreeViewItem>
            <TreeViewItem Header="Языки программирования" IsExpanded="True">
                <TreeViewItem Header="C-языки" IsExpanded="True">
                    <TreeViewItem Header="C#" />
                    <TreeViewItem Header="C/C++" />
                    <TreeViewItem Header="Java" />
                </TreeViewItem>
                <TreeViewItem Header="Basic" IsExpanded="True">
                    <TreeViewItem Header="Visual Basic" />
                    <TreeViewItem Header="VB.Net" />
                    <TreeViewItem Header="PureBasic" />
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
    </Grid>
</local:WpfUIPlatformPage>